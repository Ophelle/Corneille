<Window x:Class="ProjetCorneille.Views.WorkMovie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetCorneille.Views"
        mc:Ignorable="d"
        Title="WorkMovie" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  Height="10*"></RowDefinition>
            <RowDefinition  Height="60*"></RowDefinition>
            <RowDefinition  Height="10*"></RowDefinition>
            <RowDefinition  Height="10*"></RowDefinition>
            <RowDefinition  Height="10*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <ComboBox>
                <ComboBoxItem IsSelected="True">Chosir une video</ComboBoxItem>
                <ComboBoxItem>ListBox Item #1</ComboBoxItem>
                <ComboBoxItem>ListBox Item #2</ComboBoxItem>
                <ComboBoxItem>ListBox Item #3</ComboBoxItem>
            </ComboBox>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="126*"/>
                <ColumnDefinition Width="31*"/>
                <ColumnDefinition Width="635*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.ColumnSpan="3">
                <ComboBox Width="365">
                    <ComboBoxItem IsSelected="True">Chosir une motion de la video</ComboBoxItem>
                    <ComboBoxItem>Motion #1</ComboBoxItem>
                    <ComboBoxItem>Motion #2</ComboBoxItem>
                    <ComboBoxItem>Motion #3</ComboBoxItem>
                </ComboBox>
                <Button Width="214">Precedante</Button>
                <Button Width="214">Suivante</Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="4">
            <Button Content="Enregistrer"/>
        </Grid>
        <Grid Grid.Row="3">
            <TextBox Text="Mettre un commentaire"></TextBox>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75*"></ColumnDefinition>
                <ColumnDefinition Width="25*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="90*"></RowDefinition>
                    <RowDefinition  Height="10*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <MediaElement  />
                </Grid>
                <Grid Grid.Row="1">
                    <StackPanel Orientation="Horizontal">
                        <Button Width="150">Demarrer</Button>
                        <Button Width="150">Arreter</Button>
                        <Button Width="150">Avancer</Button>
                        <Button Width="150">Reculer</Button>
                    </StackPanel>

                </Grid>
            </Grid>
            <StackPanel Orientation="Vertical" Grid.Column="1">
                <Button Content="Demarrer le marqueur" Height="50"></Button>
                <Button Content="Arreter le marqueur" Height="50"></Button>
                <GroupBox>
                    <GroupBox.Header>
                        <Label>Chosir une action detectée</Label>
                    </GroupBox.Header>
                    <StackPanel Orientation="Vertical">
                        <RadioButton  Margin="5">Vol</RadioButton>
                        <RadioButton  Margin="5">Vol1</RadioButton>
                        <RadioButton  Margin="5">Vol2</RadioButton>
                        <RadioButton  Margin="5">Autres</RadioButton>
                    </StackPanel>
                </GroupBox>
            </StackPanel>

        </Grid>
    </Grid>
</Window>
